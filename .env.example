# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Logging
LOG_LEVEL=debug
